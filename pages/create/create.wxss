page {
  width: 100%;
  height: 100%;
}
.container {
  padding-top: 0;
  width: 100%; 
  height: 100%; 
}
.input-wrap {
  background: #fff;
}
.image_container {
  padding: 2px;
  border: 10px;
  border-color: black;
  width: 100px;
  height: 60px;
  position: relative;
  text-align: center;
  vertical-align: middle;
}
.image_frame {
  width: 100%;
  height: 100%;
}
.image_progress {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.wrap {
  display: block;
  width: 100%;
}
