page {
  width: 100%;
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
 } 
.header_bar {
  margin: 5px;
  width: 100%;
  height: 40px;
  background-color: grey;
}

.btn_right {
  float:right;
  margin: 5px;
  margin-right: 10px;
}
.image_container_col_3 {
  padding: 2px;
  width: 100px;
  height: 60px;
  position: relative;
  text-align: center;
  vertical-align: middle;
}
.image_container_col_1 {
  padding: 2px;
  position: relative;
  text-align: center;
  vertical-align: middle;
}
.image_frame_col_1 {
  width: 100%;
}
.image_frame_col_3 {
  width: 100%;
  height: 100%;
} 
.image_progress {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.image_area {
  display: block;
  width: 98%;
}
image {
  display: inline-block;
}